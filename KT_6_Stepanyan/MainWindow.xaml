<Window x:Class="KT_6_Stepanyan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KT_6_Stepanyan"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Image Source="Resources/logo.png" HorizontalAlignment="Left" Margin="200,0,0,0"></Image>
            <TextBlock Text="Товары для животных" HorizontalAlignment="Center" FontSize="20" Margin="288,19,288,0"></TextBlock>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame" 
               HorizontalAlignment="Center"></Frame>
    </Grid>
</Window>
