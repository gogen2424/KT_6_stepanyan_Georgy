<Page x:Class="WpfApp1.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center" Width="150">
            <Label Content="Логин:"></Label>
            <TextBox x:Name="LoginTextBox"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="PasswordTextBox"></PasswordBox>
            <Button x:Name="LoginButton" Click="LoginButton_Click" Margin="10" Height="20" ></Button>
        </StackPanel>
    </Grid>
</Page>
